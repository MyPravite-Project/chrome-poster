{
  "manifest_version": 2,
  "name": "Chrome Poster",
  "version": "1.5",
  "description": "Chrome poster is a developer tool that allows you to interact with http server",
  "background": {
      "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_icon": "poster.png",
    "default_title": "Chrome Poster",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ]
}
